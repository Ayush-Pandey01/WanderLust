

<% if(success && success.length) {  %>
    <div class="alert alert-success alert-dismissible fade show col-lg-6  offset-lg-3 col-sm-10 offset-sm-1" role="alert"> 
        <%= success %>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="close"
        ></button>
    </div>
<% }  %>

<% if(error && error.length) {  %>
    <div class="alert alert-danger alert-dismissible fade show col-lg-6  offset-lg-3 col-sm-10 offset-sm-1" role="alert"> 
        <%= error %>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="close"
        ></button>
    </div>
<% }  %>