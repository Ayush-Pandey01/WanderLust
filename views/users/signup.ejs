<style>
  .Bottum{
      display: flex;
      justify-content: space-between;
  }
  .link{
      text-decoration: none;
  }
</style>

<% layout("/layouts/boilerplate")%>

<div class="row mt-3 ">
    <h3 class="col-lg-6 offset-lg-3 col-sm-8 offset-sm-1 mb-3">Signup to WanderLust..... </h3>
    <div class="col-lg-6 offset-lg-3 col-sm-8 offset-sm-1 ">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">  
              <label for="username" class="form-label"> <b>Username</b> </label>
              <input 
                name="username" 
                id="username"
                type="text"  
                class="form-control" 
                required/>
              <div class="valid-feedback">looks good!!</div>
            </div>

            <div class="mb-3">  
              <label for="email" class="form-label"> <b>Email</b> </label>
              <input 
                name="email" 
                id="email"
                type="email"  
                class="form-control" 
                required/>
              <div class="valid-feedback">looks good!!</div>
            </div>

            <div class="mb-3">  
                <label for="password" class="form-label"> <b>Password</b> </label>
                <input 
                  name="password" 
                  id="password"
                  type="password"  
                  class="form-control" 
                  required/>
                <div class="valid-feedback">password looks strong!!</div>
              </div>
              <div class="Bottum">
                <button class="btn btn-success">signup</button>
                <a class="link" href="/login">Already Have Account </a>
              </div>
        
        </form>
    </div>
</div>
